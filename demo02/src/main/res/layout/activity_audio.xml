<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="msg"
            type="String" />

        <variable
            name="recording"
            type="boolean" />

    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.fltry.demo02.AudioActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/audio_start_recorder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="@{recording}"
                android:text="开始录音" />

            <Button
                android:id="@+id/audio_stop_recorder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="@{!recording}"
                android:text="停止录音" />

        </LinearLayout>

        <Button
            android:id="@+id/audio_track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="播放录音" />

        <Button
            android:id="@+id/audio_clear_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清除日志" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/audio_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{msg}" />

        </ScrollView>

    </LinearLayout>
</layout>

